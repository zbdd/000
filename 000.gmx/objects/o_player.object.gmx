                for(idx = 0; idx &lt; ds_list_size(casualty.actions); idx++) {
                    button = instance_create(mouse_x + idx * 12, mouse_y, o_b_danger);
                    ds_list_add(menu, button);
                    show_debug_message("draw")
                    next_state = 'menu'
                }
            } 
